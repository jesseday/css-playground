---
const eyebrow = await Astro.slots.render("eyebrow");
const subheading = await Astro.slots.render("subheading");
---

<section class="hero">
  <div class="content">
    {eyebrow && <p class="eyebrow">{eyebrow}</p>}
    <slot name="heading" />
    {subheading && <p class="subheading">{subheading}</p>}
  </div>
  <div class="image">
    <slot name="image" />
  </div>
</section>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-lg);
    margin: var(--spacing-lg) 0;
    padding: 0 var(--spacing-lg);
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;

    & :global(> * + *) {
      margin-block-start: var(--spacing-md, 1rem);
    }

    & :global(h1) {
      font-size: var(--font-3xl);
      line-height: 1.2;
      margin-top: 0.5rem;
    }
  }

  .eyebrow {
    color: violet;
    font-size: var(--font-md);
  }

  .subheading {
    font-size: var(--font-lg);
  }

  .image :global(img) {
    width: 100%;
    display: block;
    height: auto;
  }
</style>
